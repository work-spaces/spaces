{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "cargo: build"
		},
		{
			"type": "cargo",
			"command": "install",
			"args": [
				"--path=.",
				"--root=${userHome}/.local"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "cargo: install"
		}
	]
}